extends ../layouts/layout.pug
block content 
    +breadCrumb("heading", "our blogs", "index.html", "home", "blog")
    section(class="blog products")
        h3(class="title")
            span Our blogs 
            a(href="#") view all >> 
        div(class="box-container")
            - let contentsBox = ['blog-1.jpg', 'blog-5.jpg', 'blog-4.jpg', 'blog-2.jpg', 'blog-3.jpg']
                each data, index in contentsBox
                    div(class="blog-box")
                        div(class="image")
                            img(src=`assets/images/${data}`, alt="", srcset="")
                        div(class="content")
                            h5= `title blog ${index + 1}`
                            p Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                            a(href="#", class="btn") read more 
                            div(class="icons")
                                a(href="#") 
                                    i(class="bx bxs-calendar")
                                    | May 21st, 2021
                                a(href="#") 
                                    i(class="bx bxs-user")
                                    | admin